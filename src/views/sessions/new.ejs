<form action="/sessions" method="post">
    <div class="input-group col col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <label for="email">Email:</label>
        <input type="email" class="form-control" name="email" placeholder="Please enter your email" required>
    </div>

    <div class="input-group col col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <label for="password">Password:</label>
        <input type="password" class="form-control" name="password" placeholder="Please enter your password" required>
    </div>

    <input type="submit" class="btn btn-default btn-lg" value="Login">
</form>
